---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Cursos from '../components/Cursos.astro';
import SobreMi from '../components/SobreMi.astro';
import Testimonios from '../components/Testimonios.astro';
import ProcesoInscripcion from '../components/ProcesoInscripcion.astro';
import Galeria from '../components/Galeria.astro';
import PreguntasFrecuentes from '../components/PreguntasFrecuentes.astro';
import CTA from '../components/cta.astro';
import BlogComponent from '../components/BlogComponent.astro'
---

<Layout title="Dalia Romero - Cursos de Belleza">
  <main>
    <Hero />
    <Cursos />
    <SobreMi />
    <Testimonios />
    <CTA />
    <ProcesoInscripcion />
    <Galeria />
    <PreguntasFrecuentes />
    <BlogComponent />
    
  </main>
</Layout>

<style>
  :root {
    --gradient-primary: linear-gradient(135deg, #8a2be2, #4b0082);
    --gradient-secondary: linear-gradient(135deg, #6a0dad, #4b0082);
    --color-accent: #25D366;
    --color-text: #ffffff;
  }

  body {
    font-family: 'Arial', sans-serif;
    color: #ffffff;
    background: #ffffff;
    min-height: 100vh;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>