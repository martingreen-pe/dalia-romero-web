---
const trabajos = [
  { imagen: "/src/images/trabajo-1.jpg", descripcion: "Diseño de uñas con flores" },
  { imagen: "/src/images/trabajo-2.jpg", descripcion: "Manicura francesa elegante" },
  { imagen: "/src/images/trabajo-3.jpg", descripcion: "Uñas acrílicas con brillos" },
  { imagen: "/src/images/trabajo-4.jpg", descripcion: "Nail art geométrico" },
  { imagen: "/src/images/trabajo-5.jpg", descripcion: "Manicura rusa perfecta" },
  { imagen: "/src/images/trabajo-6.jpg", descripcion: "Diseño de uñas minimalista" },
];
---

<section class="galeria">
  <h2 class="galeria__titulo">Galería de Trabajos</h2>
  <div class="galeria__grid">
    {trabajos.map((trabajo) => (
      <div class="galeria__item">
        <img src={trabajo.imagen} alt={trabajo.descripcion} class="galeria__imagen">
        <div class="galeria__overlay">
          <p class="galeria__descripcion">{trabajo.descripcion}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .galeria {
    padding: 4rem 1rem;
    background: var(--gradient-secondary);
  }

  .galeria__titulo {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .galeria__grid {
    display: grid;
    gap: 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .galeria__item {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
  }

  .galeria__imagen {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .galeria__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.7);
    padding: 1rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .galeria__descripcion {
    color: var(--color-text);
    text-align: center;
    margin: 0;
  }

  .galeria__item:hover .galeria__imagen {
    transform: scale(1.1);
  }

  .galeria__item:hover .galeria__overlay {
    transform: translateY(0);
  }

  @media (min-width: 768px) {
    .galeria__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .galeria__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>