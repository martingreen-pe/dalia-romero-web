---
const cursos = [
  {
    titulo: "Curso de Softgel",
    descripcion: "Domina la técnica de uñas softgel para resultados duraderos y naturales.",
    imagen: "/content/curso-soft-gel.png"
  },
  {
    titulo: "Curso de Uñas Acrílicas",
    descripcion: "Aprende a crear uñas acrílicas perfectas con nuestro curso especializado.",
    imagen: "/content/curso-unas-acrilicas.png"
  },
  {
    titulo: "Curso de Manicura Rusa",
    descripcion: "Descubre los secretos de la manicura rusa y lleva tu técnica al siguiente nivel.",
    imagen: "/content/curso-manicura-rusa.png"
  },
  {
    titulo: "Curso de PolyGel",
    descripcion: "Perfecciona tus habilidades en la aplicación de Polygel para uñas naturales y elegantes.",
    imagen: "/content/curso-polygel.png"
  }
];
---

<section id="cursos" class="cursos">
  <h2 class="cursos__title">Nuestros Cursos</h2>
  <div class="cursos__grid">
    {cursos.map((curso) => (
      <div class="curso-card">
        <img src={curso.imagen} alt={curso.titulo} class="curso-card__imagen" />
        <div class="curso-card__content">
          <h3 class="curso-card__titulo">{curso.titulo}</h3>
          <p class="curso-card__descripcion">{curso.descripcion}</p>
          <a href={`/curso/${curso.titulo.toLowerCase().replace(/ /g, '-')}`} class="curso-card__cta">Más información</a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .cursos {
    padding: 4rem 1rem;
  }

  .cursos__title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .cursos__grid {
    display: grid;
    gap: 2rem;
  }

  .curso-card {
    background: var(--gradient-secondary);
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .curso-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .curso-card__imagen {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .curso-card__content {
    padding: 1.5rem;
  }

  .curso-card__titulo {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .curso-card__descripcion {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .curso-card__cta {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent);
    color: var(--color-text);
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s ease;
  }

  .curso-card__cta:hover {
    background: #1ea952;
  }

  @media (min-width: 768px) {
    .cursos__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cursos__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>