---
const cursos = [
  {
    titulo: "Curso de Softgel",
    descripcion: "Domina la técnica de uñas softgel para resultados duraderos y naturales.",
    imagen: "/images/curso-soft-gel.png"
  },
  {
    titulo: "Curso de Uñas Acrílicas",
    descripcion: "Aprende a crear uñas acrílicas perfectas con nuestro curso especializado.",
    imagen: "/images/curso-unas-acrilicas.png"
  },
  {
    titulo: "Curso de Manicura Rusa",
    descripcion: "Descubre los secretos de la manicura rusa y lleva tu técnica al siguiente nivel.",
    imagen: "/images/curso-manicura-rusa.png"
  },
  {
    titulo: "Curso de PolyGel",
    descripcion: "Perfecciona tus habilidades en la aplicación de Polygel para uñas naturales y elegantes.",
    imagen: "/images/curso-polygel.png"
  }
];

// Función para truncar texto
const truncateText = (text, limit) => {
  return text.length > limit ? text.substring(0, limit) + "..." : text;
};
---

<section id="cursos" class="cursos">
  <h2 class="cursos__title">Nuestros Cursos</h2>
  <div class="cursos__grid">
    {cursos.map((curso) => (
      <div class="curso-card">
        <img src={curso.imagen} alt={curso.titulo} class="curso-card__imagen" />
        <div class="curso-card__content">
          <h3 class="curso-card__titulo">{curso.titulo}</h3>
          <p class="curso-card__descripcion">{truncateText(curso.descripcion, 100)}</p> <!-- Limita la descripción a 100 caracteres -->
          <a href={`/curso/${curso.titulo.toLowerCase().replace(/ /g, '-')}`} class="curso-card__cta">Más información</a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .cursos {
    padding: 4rem 1rem;
    background-color: var(--color-off-white); /* Fondo claro para la sección */
  }

  .cursos__title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-dark-gray);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .cursos__grid {
    display: grid;
    gap: 2rem;
  }

  .curso-card {
    background: var(--gradient-primary); /* Usando el degradado desde global.css */
    border-radius: 10px;
    overflow: hidden;
    padding: 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .curso-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .curso-card__imagen {
    width: 100%;
    height: 200px;
    object-fit: cover;
    filter: brightness(0.9); /* Ligero oscurecimiento para destacar el contenido */
    transition: filter 0.3s ease;
  }

  .curso-card__imagen:hover {
    filter: brightness(1); /* Imagen más brillante al hacer hover */
  }

  .curso-card__content {
    text-align: center;
    margin-top: 1rem;
  }

  .curso-card__titulo {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-dark-gray);
  }

  .curso-card__descripcion {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: var(--color-medium-gray);
  }

  .curso-card__cta {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: var(--color-white);
    text-decoration: none;
    border-radius: 50px;
    font-weight: bold;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  .curso-card__cta:hover {
    background: var(--color-accent-light);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(106, 90, 205, 0.3);
  }

  @media (min-width: 768px) {
    .cursos__grid {
      grid-template-columns: repeat(2, 1fr); /* Dos columnas en pantallas medianas */
    }
  }

  @media (min-width: 1024px) {
    .cursos__grid {
      grid-template-columns: repeat(4, 1fr); /* Cuatro columnas en pantallas grandes */
    }
  }
</style>

