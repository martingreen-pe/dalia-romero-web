---
const cursos = [
  {
    titulo: "Curso de Softgel",
    descripcion: "Domina la técnica de uñas softgel para resultados duraderos y naturales.",
    imagen: "/images/curso-soft-gel.png"
  },
  {
    titulo: "Curso de Uñas Acrílicas",
    descripcion: "Aprende a crear uñas acrílicas perfectas con nuestro curso especializado.",
    imagen: "/images/curso-unas-acrilicas.png"
  },
  {
    titulo: "Curso de Manicura Rusa",
    descripcion: "Descubre los secretos de la manicura rusa y lleva tu técnica al siguiente nivel.",
    imagen: "/images/curso-manicura-rusa.png"
  },
  {
    titulo: "Curso de PolyGel",
    descripcion: "Perfecciona tus habilidades en la aplicación de Polygel para uñas naturales y elegantes.",
    imagen: "/images/curso-polygel.png"
  }
];

// Función para truncar texto
const truncateText = (text, limit) => {
  return text.length > limit ? text.substring(0, limit) + "..." : text;
};
---

<section id="cursos" class="cursos">
  <h2 class="cursos__title">Nuestros Cursos</h2>
  <div class="cursos__grid">
    {cursos.map((curso) => (
      <div class="curso-card">
        <img src={curso.imagen} alt={curso.titulo} class="curso-card__imagen" />
        <div class="curso-card__content">
          <h3 class="curso-card__titulo">{curso.titulo}</h3>
          <p class="curso-card__descripcion">{truncateText(curso.descripcion, 100)}</p> <!-- Limita la descripción a 100 caracteres -->
          <a href={`/curso/${curso.titulo.toLowerCase().replace(/ /g, '-')}`} class="curso-card__cta">Más información</a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .cursos {
  padding: 1rem;
  background: var(--gradient-secondary);
  color: var(--color-text);
}

.cursos__title {
  font-size: 2rem;
  margin-bottom: 1.5rem;
  color: var(--color-accent);
  text-align: center;
}

.cursos__grid {
  display: grid;
  grid-template-columns: 1fr; /* Una columna por defecto (móviles) */
  gap: 1rem;
}

.curso-card {
  background: var(--gradient-primary);
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
}

.curso-card:hover {
  transform: translateY(-5px);
}

.curso-card__imagen {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.curso-card__content {
  padding: 1rem;
  flex: 1;
}

.curso-card__titulo {
  color: var(--color-accent);
  margin-bottom: 0.5rem;
  font-size: 1.25rem; /* Ajustado para móviles */
}

.curso-card__descripcion {
  font-size: 0.875rem;
  margin-bottom: 1rem;
}

.curso-card__cta {
  display: inline-block;
  color: var(--color-accent);
  text-decoration: none;
  font-weight: bold;
}

.curso-card__cta:hover {
  text-decoration: underline;
}

/* Estilo para pantallas medianas */
@media (min-width: 768px) {
  .cursos__grid {
    grid-template-columns: repeat(2, 1fr); /* Dos columnas en pantallas medianas */
  }
}

/* Estilo para pantallas grandes */
@media (min-width: 1200px) {
  .cursos__grid {
    grid-template-columns: repeat(2, 1fr); /* Dos columnas en pantallas grandes */
  }
}

</style>

