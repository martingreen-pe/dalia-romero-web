<header class="header">
  <div class="header__container container">
    <a href="/" class="header__logo">Dalia Romero</a>
    <button class="header__toggle" aria-label="Abrir menú">
      <span class="header__toggle-icon"></span>
    </button>
    <nav class="header__nav">
      <ul class="header__menu">
        <li class="header__menu-item"><a href="/">Inicio</a></li>
        <li class="header__menu-item"><a href="/cursos">Cursos</a></li>
        <li class="header__menu-item"><a href="/sobre-mi">Sobre Mí</a></li>
        <li class="header__menu-item"><a href="/contacto">Contacto</a></li>
      </ul>
    </nav>
    <a href="https://wa.me/TUNUMERODEWHATSAPP" class="header__cta" target="_blank" rel="noopener noreferrer">
      <img src="/whatsapp-icon.svg" alt="WhatsApp" class="header__cta-icon" />
      Contáctanos
    </a>
  </div>
</header>

<style>
  .header {
    background: linear-gradient(135deg, #8a2be2, #4b0082);
    padding: 1rem 0;
    position: relative;
  }
  .header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .header__logo {
    color: white;
    font-size: 1.5rem;
    text-decoration: none;
  }
  .header__toggle {
    display: block;
    background: none;
    border: none;
    cursor: pointer;
  }
  .header__toggle-icon {
    display: block;
    width: 30px;
    height: 3px;
    background-color: white;
    position: relative;
    transition: background-color 0.3s ease;
  }
  .header__toggle-icon::before,
  .header__toggle-icon::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: white;
    transition: transform 0.3s ease;
  }
  .header__toggle-icon::before {
    transform: translateY(-8px);
  }
  .header__toggle-icon::after {
    transform: translateY(8px);
  }
  .header__nav {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: linear-gradient(135deg, #6a0dad, #4b0082);
    z-index: 1000;
  }
  .header__nav--active {
    display: block;
  }
  .header__menu {
    list-style: none;
    padding: 1rem;
    margin: 0;
  }
  .header__menu-item {
    margin-bottom: 1rem;
    text-align: center;
  }
  .header__menu-item a {
    color: white;
    text-decoration: none;
  }
  .header__toggle-icon.active {
    background-color: transparent;
  }
  .header__toggle-icon.active::before {
    transform: translateY(0) rotate(45deg);
  }
  .header__toggle-icon.active::after {
    transform: translateY(0) rotate(-45deg);
  }
  .header__cta {
    display: none;
    align-items: center;
    background: linear-gradient(135deg, #25D366, #128C7E);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.3s ease;
  }
  .header__cta:hover {
    background: linear-gradient(135deg, #128C7E, #075E54);
  }
  .header__cta-icon {
    width: 24px;
    height: 24px;
    margin-right: 0.5rem;
  }
  @media (min-width: 768px) {
    .header__toggle {
      display: none;
    }
    .header__nav {
      display: block;
      position: static;
      width: auto;
      background: none;
    }
    .header__menu {
      display: flex;
      padding: 0;
    }
    .header__menu-item {
      margin-bottom: 0;
      margin-left: 1.5rem;
    }
    .header__cta {
      display: inline-flex;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.header__toggle');
  const nav = document.querySelector('.header__nav');
  const toggleIcon = document.querySelector('.header__toggle-icon');

  if (toggle && nav && toggleIcon) {
    toggle.addEventListener('click', () => {
      nav.classList.toggle('header__nav--active');
      toggleIcon.classList.toggle('active');
    });
  }
</script>